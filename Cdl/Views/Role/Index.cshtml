@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Add Role";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<table style=" background-color:white; border: dashed 3px slateGray; padding: 5px;width: 99%;table-layout:fixed;" cellpadding="6" cellspacing="6">
    <tr style="height: 30px; background-color:steelBlue ; color:white ;border: solid 1px cornflowerBlue;">
        <td align="center" colspan="2">
            <h2> Create User Roles</h2>
        </td>

    </tr>

    <tr>
        <td>
            <table id="tbrole" style="width:100%; border:dotted 1px; background-color:gainsboro; padding-left:10px;">

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width:100%; border:dotted 1px;">
                            @item.Name
                        </td>
                        <td>@Html.ActionLink("Edit","AddController",new{ id=item.Id})</td>
                    </tr>}
            </table>
        </td>
        <td align="right" >

            @TempData["Msg"]
            @using (Html.BeginForm("Create", "Role", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                        RollName: @Html.TextBox("newroll") <input type="submit" value="Create" />
                    
                </div>

            }
        </td>
    </tr>
</table>