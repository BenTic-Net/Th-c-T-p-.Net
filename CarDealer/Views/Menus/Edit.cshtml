           MenuOrigin = $(p).parent().parent()[0].outerHTML;
           console.log(MenuOrigin);
           $('.fa-remove').click(/*function () { cancel(this, "Edit"); }*/);

           $(p).parent().parent().replaceWith('<li><a><input type="text" id="menutxt" value="'+name+'" placeholder="Name..." style="color:black; width:150px"/>&nbsp;&nbsp;<i class="fa fa-save" style="font-size:20px;color:white" onclick="MenuLink(this,' + atn + ')"></i>&nbsp;<i class="fa fa-remove" style="font-size:20px;color:white" onclick="cancel(this,' + atn + ')"></i></a></li>');
           return;
       }

    }

    var MenuLink = function (p,atn)
    {

        if (atn == 'add') {
            atn = "'" + atn + "'";
            MenuName= $('#menutxt').val();
           // $('#menutxt').parent().parent().replaceWith('<li onclick="MenuName(this,' + atn + ')"><a><i class="fa fa-plus"></i></a></li>')

            $(p).parent().parent().replaceWith('<li><a><input type="text" id="menutxt" placeholder="Url..." style="color:black; width:150px"/>&nbsp;&nbsp;<i class="fa fa-save" style="font-size:20px;color:white" onclick="MenuPost(this,'+atn+')"></i>&nbsp;<i class="fa fa-remove" style="font-size:20px;color:white" onclick="cancel(this,' + atn + ')"></i></a></li>');

        }
        if (atn == 'Edit')
        {
            atn = "'" + atn + "'";
            MenuName = $('#menutxt').val();
            var link = $(MenuOrigin).children('a').attr('href');
            $(p).parent().parent().replaceWith('<li><a><input type="text" id="menutxt" value="'+link+'" placeholder="Url..." style="color:black; width:150px"/>&nbsp;&nbsp;<i class="fa fa-save" style="font-size:20px;color:white" onclick="MenuPost(this,' + atn + ')"></i>&nbsp;<i class="fa fa-remove" style="font-size:20px;color:white" onclick="cancel(this,' + atn + ')"></i></a></li>');
        }
    }

    var MenuPost = function (p,atn)
    {
        if (atn == 'add') {
            atn = "'" + atn + "'";
            MenuLink = $('#menutxt').val();
            var m = { "Text": MenuName, "Link": MenuLink, "Type": "Admin", "ParentId": Parentid, "Status": "true" };
            $.ajax({
                type: 'POST',
                url: '/Menus/CreateLink',
                contentType: "application/json",
                data: JSON.stringify(m),
               
                success :function(d) {
                    alert('success');
                    console.log(d);
                },
                error: function (d) {
                    console.log(d);
                    alert('error');
                    
                }
                });
        }

        if (atn == 'Edit')
        {
            atn = "'" + atn + "'";
            MenuLink = $('#menutxt').val();
            var m = { "Text": MenuName, "Link": MenuLink, "Type": "Admin", "ParentId": Parentid, "Status": "true" };

            $.ajax({
                type: 'POST',
                url: '/Menus/CreateLink',
                contentType: "application/json",
                data: JSON.stringify(m),

                success: function (d) {
                    alert('success');
                    console.log(d);
                },
                error: function (d) {
                    console.log(d);
                    alert('error');

                }
            });

        }
    }

    var cancel =function (p,atn) {

        if (atn === 'add') {
            atn = "'" + atn + "'";
            $(p).parent().parent().replaceWith('<li onclick="MenuName(this,' + atn + ')" ><a><i class="fa fa-plus"></i></a></li>')
        }
        if (atn === 'Edit')
        {
            atn = "'" + atn + "'";
            if ($(MenuOrigin).children('ul').length!==0)
            MenuOrigin = $(MenuOrigin).children('ul').attr('style', '').parent()[0].outerHTML;
            
            $(p).parent().parent().replaceWith(MenuOrigin); 
        }

    }

