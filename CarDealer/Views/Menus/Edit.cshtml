        //$(".sidebar ul[name*=level-1] a").prepend('<i class="fa fa-bars">' + i++ + '</i>');
        $(".sidebar ul[name*=level-1]").attr('class', 'sidebar-menu tree').attr('data-widget', 'tree');
        $('.sidebar-menu li').first().attr('class', 'header').append('Header').children().remove();
        $('.sidebar-menu li ul').parent().attr('class', 'treeview');
        $('.treeview').siblings('.treeview').children('a').append('<span class="pull-right-container"><i class="fa fa-angle-left pull-right" ></i ></span >');
        // $('.treeview-menu').parent().append('<span class="pull-right-container"><i class="fa fa-angle-left pull-right" ></i ></span >');
        $('.treeview ul').attr('class', 'treeview-menu');

        for (var i = 1; i <= '@ViewBag.Lastlevel'; i++) {
            var action = "'add'";
            $('[name*=level-' + i + ']').append('<li onclick="MenuName(this,' + action + ')" ><a><i class="fa fa-plus"></i></a></li>');
        }

        var action = "'Edit'"
        $('.sidebar li[id] > a').append('<i class="fa fa-edit"  style="margin-left:10px"></i>&nbsp;&nbsp;<i class="fa fa-trash"></i>');


        $('.sidebar ').on("click", 'li[id] > a > .fa-edit', function (e) {
            e.stopPropagation();
            e.preventDefault();
            MenuName(this, 'Edit');

        });

        $('.sidebar ').on("click", 'li[id] > a > .fa-trash', function (e) {

            e.stopPropagation();
            e.preventDefault();
            DeleteMenu(this);
        });

        $('.fa').click(function (e) {
            e.preventDefault();
        });
