@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Add Role";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Manage User Roles</h2>


@TempData["Msg"]
@using (Html.BeginForm("Create", "Role", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
   
                <div class="col-md-5">
                    @Html.TextBox("newroll", null, new { @placeholder = "New Rold", @class = "form-control " })

                </div>
                <input type="submit" value="Create" class="btn btn-default" />
}


            <table id="tbrole" class="table" style="width:100%; padding-left:10px;">
                <tr>
                    
                        <th>Role Name</th>
                        <th></th>
                    

                </tr>


                @foreach (var item in Model)
                {


                    <tr>
                        <td style="">
                            @item.Name
                        </td>
                        <td>@Html.ActionLink("Edit", "EditRolesAtuthentication", new { id = item.Id })</td>
                    
                    
                    </tr>
                }






</table>