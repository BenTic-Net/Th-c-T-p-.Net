@section scripts{
    
    <script>
        $(document).ready(function () {
            ShowAccHideInfo();
            $('#choiceform input').on('change', function () {
                console.log($('input[name=choice]:checked', '#choiceform').val());
                if ($('input[name=choice]:checked', '#choiceform').val() === '2') {
                    ShowInfoHideAcc();
                    $('#Account').val('').change();
                }
                else {

                    ShowAccHideInfo();
                }
            });

        });
        ShowAccHideInfo = function () {            
            $('#AccountSt').show();
            $('#CtmIfSctn').hide();
            $('#Account').attr("required", "required");
            $('.Info').removeAttr("required");
        };
        ShowInfoHideAcc = function () {
            
            $('#AccountSt').hide();
            $('#CtmIfSctn').show();
            $('#Account').removeAttr("required");
            $('.Info').attr("required", "required");
        };
    </script>
    

