@model CarDealer.Areas.Client.Models.MenuSearchViewModel

<section id="filter_form" class="gray-bg">
    <div class="container">
        <h3>Find Your Dream Car <span>(Easy search from here)</span></h3>
        <div class="row">
            @using (Html.BeginForm("Index", "ListCar",FormMethod.Get))
            {
            
                <div class="form-group col-md-3 col-sm-6 black_input">
                    <div class="select">
                        <select class="form-control">
                            <option value="">Select Location </option>
                            <option value="">Location 1 </option>
                            <option value="">Location 1 </option>
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-3 col-sm-6 black_input">
                    <div class="select">
                        <select class="form-control" name="ddlManufacture">
                            <option value="">Select Brand</option>
                            @foreach (var m in Model.Mnfct)
                            {
                                <option value="@m.FullName">@m.FullName</option>
                            }

                        </select>
                    </div>
                </div>
                <div class="form-group col-md-3 col-sm-6 black_input">
                    <div class="select">
                        <select class="form-control" name="ddlModel">
                            <option value="">Select Model</option>
                            @foreach (var m in Model.model)
                            {
                                <option value="@m.Name">@m.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-3 col-sm-6 black_input">
                    <div class="select">
                        <select class="form-control">
                            <option value="">Year of Model </option>
                            <option>2016</option>
                            <option>2015</option>
                            <option>2014</option>
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-6 col-sm-6 black_input">
                    <label class="form-label">Price Range ($)</label>
                    <input id="price_range" type="text" name="price" class="span2" value="" data-slider-min="1000" data-slider-max="100000" data-slider-step="5"
                           data-slider-value="[15000,80000]">
                </div>
                <div class="form-group col-md-3 col-sm-6 black_input">
                    <div class="select">
                        <select class="form-control">
                            <option value="">Type of Car </option>
                            <option value="New">New Car</option>
                            <option value="Used">Used Car</option>
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-3 col-sm-6">
                    <button type="submit" class="btn btn-block"><i class="fa fa-search" aria-hidden="true"></i> Search Car </button>
                </div>
            }
        </div>
    </div>
</section>


