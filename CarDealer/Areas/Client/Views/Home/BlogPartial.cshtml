@model IEnumerable<CarDealer.Areas.Client.Models.BlogViewModel>
<!--Blog -->
<section class="section-padding">
    <div class="container">
        <div class="section-header text-center">
            <h2>Latest Updates In<span> Automobile Industry</span></h2>
            <p>
                There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some
                form, by injected humour, or randomised words which don't look even slightly believable. If you are going to use
                a passage of Lorem Ipsum, you need to be sure there isn't anything embarrassing hidden in the middle of text.
            </p>
        </div>
        <div class="row">
            @foreach ( var n in Model)
            {

            <div class="col-md-4 col-sm-4">
                <article class="blog-list">
                    <div class="blog-info-box">
                        <div class="share_article">
                            <p><i class="fa fa-share-alt" aria-hidden="true"></i></p>
                            <ul>
                                <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                        <a href="@Url.Action("Detail","Blog",new { id=n.NewId})"><img src="@(n.Image)_thumbs/Images/New.jpg" class="img-responsive" alt="image"></a>
                        <ul>
                            <li><i class="fa fa-tags" aria-hidden="true">@foreach (var t in n.Topics)
                            { <a href="@Url.Action("Index","Blog",new { tag=t})">@t</a>} </i></li>
                            <li><i class="fa fa-calendar" aria-hidden="true"></i>@n.CreatedOn</li>
                            <li><a href="#"><i class="fa fa-comment-o" aria-hidden="true"></i>@n.Commentcount Comments</a></li>
                        </ul>
                    </div>
                    <div class="blog-content">
                        <h5><a href="@Url.Action("Detail","Blog",new { id=n.NewId})">@n.Title</a></h5>
                        <p>
                            @foreach (var c in n.SubContent)
                            {@Html.Raw(c+" ")
                            }. . .
                        </p>
                        <a href="@Url.Action("Detail","Blog",new { id=n.NewId})" class="btn-link">Read More <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
                    </div>
                </article>
            </div>
            }
        </div>
    </div>
</section>
<!-- /Blog-->
