@model CarDealer.Models.ChangePasswordViewModel


<h4 class="text-danger">@ViewBag.result</h4>

    @Html.AntiForgeryToken()
    
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 control-label" })
        
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control white_bg" })
        
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
        
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control white_bg" })
        
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
       
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control white_bg" })
        
    </div>
    <div class="form-group">
        <button type="submit" class="btn">Save Changes <span class="angle_arrow"><i class="fa fa-angle-right" aria-hidden="true"></i></span></button>
    </div>
}
