@model IEnumerable<CarDealer.Areas.Client.Models.ShortCarViewModel>

  <!--Similar-Cars-->
<div class="similar_cars">
    <h3>Similar Cars</h3>
    <div class="row">
        @foreach (var c in Model)
        {
        <div class="col-md-3 grid_listing">
            <div class="product-listing-m gray-bg">
                <div class="product-listing-img">
                    <a href="/Client/CarDetail/Index/@(c.id)">
                        <img src="@(c.ThumpImage)Car.jpg" class="img-responsive" alt="image">
                    </a>
                    @if (c.CurentMile <= 5)
                    {
                    <div class="label_icon">New</div>}
                    else {<div class="label_icon">Old</div>}
                    @*<div class="compare_item">
                        <div class="checkbox">
                            <input type="checkbox" value="" id="compare13">
                            <label for="compare13">Compare</label>
                        </div>
                    </div>*@
                </div>
                <div class="product-listing-content">
                    <h5>
                        <a href="#">@c.Name</a>
                    </h5>
                    <p class="list-price">@Html.DisplayFor(modelc=>c.AskingPrice)</p>
                    <div class="car-location">
                        <span>
                            <i class="fa fa-map-marker" aria-hidden="true"></i> Colorado, USA
                        </span>
                    </div>
                    <ul class="features_list">
                        <li>
                            <i class="fa fa-road" aria-hidden="true"></i>@c.CurentMile km
                        </li>
                        <li>
                            <i class="fa fa-tachometer" aria-hidden="true"></i>30.000 miles
                        </li>
                        <li>
                            <i class="fa fa-calendar" aria-hidden="true"></i>@c.ModelName model
                        </li>
                        <li>
                            <i class="fa fa-car" aria-hidden="true"></i>Diesel
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        }
    </div>
</div>
<!--/Similar-Cars-->
