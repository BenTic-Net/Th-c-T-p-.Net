@using Microsoft.AspNet.Identity
<div class="user_login">
    <ul>
        <li class="dropdown">
            <a href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user-circle" aria-hidden="true"></i>@User.Identity.Name<i class="fa fa-angle-down" aria-hidden="true"></i></a>
            <ul class="dropdown-menu">
                <li><a href="./profile_settings.html">Profile Settings</a></li>
                <li><a href="./favorite.html">My favorite car</a></li>
                <li>@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
     @Html.AntiForgeryToken()   
     <a href="javascript:document.getElementById('logoutForm').submit()" style="display: block; padding: 3px 20px;clear: both;line-height: 1.42857143;white-space: nowrap;">Sign Out</a>
    }
                    </li>
            </ul>
        </li>
    </ul>
</div>